# ====================
# AGENT AUTOMATION SYSTEM - ENVIRONMENT VARIABLES
# ====================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ====================
# DATABASE CONFIGURATION (Supabase Remote)
# ====================
# Main database password (used by both Docker and direct connections)
DB_PASSWORD=your_supabase_database_password_here

# Spring Datasource Configuration (MCP Provider)
SPRING_DATASOURCE_URL=jdbc:postgresql://aws-0-eu-central-1.pooler.supabase.com:6543/postgres?user=postgres.srtihtbzckhristzucid&reWriteBatchedInserts=true
SPRING_DATASOURCE_USERNAME=postgres.srtihtbzckhristzucid
SPRING_DATASOURCE_PASSWORD=your_supabase_database_password_here

# Supabase Direct API Access (if needed)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ====================
# AI PROVIDER CONFIGURATION
# ====================
# HuggingFace API for AI models
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Optional AI Provider APIs
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# ====================
# AGENT PROVIDER CONFIGURATION
# ====================
# RapidAPI YouTube Transcriptor
RAPIDAPI_YOUTUBE_KEY=your_rapidapi_youtube_key_here

# DeepL Translation API
DEEPL_API_KEY=your_deepl_api_key_here

# Stability AI for Image Generation
STABILITY_AI_KEY=your_stability_ai_key_here

# ====================
# EMAIL CONFIGURATION (MCP Provider)
# ====================
# Gmail SMTP Configuration
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password

# SMTP Settings (optional - defaults provided)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587

# ====================
# SERVICE PORTS & URLS
# ====================
# Service Ports (for development)
SERVER_PORT=8083
AI_PROVIDER_PORT=8082
AGENT_PROVIDER_PORT=8081
FRONTEND_PORT=3000

# Service URLs (for inter-service communication)
AI_PROVIDER_BASE_URL=http://localhost:8082
MCP_PROVIDER_BASE_URL=http://localhost:8083
AGENT_PROVIDER_BASE_URL=http://localhost:8081

# ====================
# APPLICATION ENVIRONMENT
# ====================
# Environment settings
NODE_ENV=development
SPRING_PROFILES_ACTIVE=docker

# ====================
# MONITORING & LOGGING
# ====================
LOG_LEVEL=INFO
ENABLE_METRICS=true
DEBUG_MODE=false

# ====================
# PRODUCTION DEPLOYMENT (Optional)
# ====================
# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/your/cert.pem
SSL_KEY_PATH=/path/to/your/key.pem

# ====================
# DOCKER COMPOSE CONFIGURATION
# ====================
# These are automatically handled by Docker Compose networking
# Uncomment for manual configuration if needed

# Docker Internal Service URLs
# AI_PROVIDER_URL=http://ai-provider:8082/ai-provider
# MCP_PROVIDER_URL=http://mcp-provider:8083/mcp-provider
# AGENT_PROVIDER_URL=http://agent-provider:8081/agent-provider
# FRONTEND_URL=http://frontend:3000

# Docker Compose Project
COMPOSE_PROJECT_NAME=agent-automation
COMPOSE_FILE=docker-compose.yml 